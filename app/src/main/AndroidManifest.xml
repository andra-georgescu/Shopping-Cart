<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.andra.shoppingcart">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".application.ShoppingCartApplication"
        android:icon="@drawable/shopping_cart_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activity.ProduceActivity"
            android:label="@string/activity_produce"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.BasketActivity"
            android:label="@string/activity_produce"/>

    </application>

</manifest>
